@{
    ViewData["Title"] = "Sausage Balls";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4">Sausage Balls</h1>
            <img src="~/assets/sausage-balls.jpg" alt="Sausage Balls" class="img-fluid mb-4">

            <h2>Ingredients:</h2>
            <ul>
                <li>1 lb. ground pork sausage</li>
                <li>2 c. Bisquick</li>
                <li>4 c. shredded cheddar</li>
                <li>2 tbsp. freshly chopped parsley, plus more for garnish</li>
                <li>1 tbsp. paprika</li>
                <li>Kosher salt</li>
                <li>Freshly ground black pepper</li>
                <li>Extra-virgin olive oil, for brushing</li>
            </ul>

            <h3>Instructions:</h3>
            <ol>
                <li>Preheat oven to 350Â° and line a baking sheet with parchment. In a large bowl, mix together pork sausage, Bisquick, cheddar, parsley, and paprika until combined and season with salt and pepper.</li>
                <li>Using a small cookie scoop, place tablespoon-size balls of mixture onto prepared baking sheet.</li>
                <li>Brush tops of balls with olive oil and bake until deeply golden and no longer pink, 25 minutes.</li>
                <li>Garnish with parsley before serving.</li>
            </ol>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Additional Information</h5>
                    <p class="card-text">Preparation Time: 10 minutes</p>
                    <p class="card-text">Cooking Time: 25 minutes</p>
                    <p class="card-text">Servings: 20</p>
                </div>
            </div>
        </div>
    </div>
</div>